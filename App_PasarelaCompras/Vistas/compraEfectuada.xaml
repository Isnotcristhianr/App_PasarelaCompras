<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_PasarelaCompras.Vistas.compraEfectuada"
             NavigationPage.HasNavigationBar="false"
>
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Source="drunk.gif" IsAnimationPlaying="True" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                   Margin="0,100,0,0"></Image>
            <Label
                Text="Gracias por tu compra  &#10; Disfruta con moderacion"
                TextColor="Black" CharacterSpacing="1" HorizontalTextAlignment="Center" FontSize="25" FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   Margin="0,-300,0,0"
                >
            </Label>
            <Button Text="Continuar" BackgroundColor="Aquamarine" CornerRadius="30" Margin="25"
                        HeightRequest="70" Clicked="BtnComprar" x:Name="btnComprar"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>